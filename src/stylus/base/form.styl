.form-inline
  clearfix()
  
  .form-group
    float-comp()
    
.form-group
  .form-control
    width    100%
    height   45px
    
select
  appearance        none
  background        #fff
  border          none
  border-radius     0
  box-shadow        none
  cursor          pointer
  display         block
  font-size       1em
  padding         0.75em
  width         100%
  
.select-arrow
  position relative
  &:after
    position absolute
    border-left       5px solid transparent
    border-right      5px solid transparent
    border-top        5px solid #000
    content         ""
    right         0.5em
    top           45%    

// hide default select arrow for IE10+
select::-ms-expand
  display         none
  